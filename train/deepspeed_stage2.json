{
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 2e-5,
            "betas": [0.9, 0.999],
            "eps": 1e-8,
            "weight_decay": 0.01,
            "adam_w_mode": true
        }
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0.0,
            "warmup_max_lr": 2e-5,
            "warmup_num_steps": 1000
        }
    },
    "bf16": {
        "enabled": true
    },
    "zero_optimization": {
        "stage": 2
    },
    "flops_profiler": {
        "enabled": false,
        "profile_step": 10,
        "module_depth": -1,
        "top_modules": 1,
        "detailed": true
    },
    "comms_logger": {
        "enabled": false,
        "verbose": false,
        "prof_all": false,
        "debug": false,
        "prof_ops": ["all_reduce", "all_gather"]
    },
    "tensorboard": {
        "enabled": true,
        "output_path": "deepspeedlogs/ds_logs/",
        "job_name": "deepspeed"
    },
    "gradient_accumulation_steps": 2,
    "gradient_clipping": 1.0,
    "train_batch_size": 4,
    "train_micro_batch_size_per_gpu": 2,
    "wall_clock_breakdown": true
}
